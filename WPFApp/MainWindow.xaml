<Window x:Class="WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Accueil - WPFApp" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Menu">
                <MenuItem Header="Envoyer un email" Click="OpenEmailWindow_Click"/>
                <MenuItem Header="To-Do list" Click="OpenToDoWindow_Click"/>
                <MenuItem Header="Chronomètre" Click="OpenChronoWindow_Click"/>
                <MenuItem Header="Communication reseau" Click="OpenCommunicationWindow_CLick"/>
            </MenuItem>
        </Menu>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Bienvenue dans WPFApp"
                       FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,10,0,10"/>

            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Content="Envoyer un email" Width="160" Height="40" Click="OpenEmailWindow_Click"/>
                <Button Content="To-Do list" Width="160" Height="40" Click="OpenToDoWindow_Click"/>
                <Button Content="Chronomètre" Width="160" Height="40" Click="OpenChronoWindow_Click"/>
                <Button Content="Communication reseau" Width="160" Height="40" Click="OpenCommunicationWindow_CLick"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
