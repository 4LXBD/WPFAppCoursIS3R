<Window x:Class="WPFApp.ToDoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WPFApp"
        Title="To-Do List" Height="420" Width="520" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <local:BoolToBrushConverter x:Key="BoolToBrushConverter"/>
        <local:BoolToTextDecorationConverter x:Key="BoolToTextDecorationConverter"/>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <TextBox Name="NewTaskTextBox" Width="350" Margin="0,0,8,0" />
            <Button Content="Ajouter" Width="100" Click="AddButton_Click"/>
        </StackPanel>

        <ListBox Name="TasksListBox"
                 Grid.Row="1"
                 ItemsSource="{Binding Tasks}"
                 HorizontalContentAlignment="Stretch"
                 Margin="0,0,0,8">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel Margin="4">
                        <CheckBox IsChecked="{Binding IsDone, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding Title}" VerticalAlignment="Center"
                                   Foreground="{Binding IsDone, Converter={StaticResource BoolToBrushConverter}}"
                                   TextDecorations="{Binding IsDone, Converter={StaticResource BoolToTextDecorationConverter}}"/>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Orientation="Horizontal" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Left">
            <TextBlock Text="Modifier le titre : " VerticalAlignment="Center" Margin="0,0,4,0"/>
            <TextBox Width="300" 
                     Text="{Binding SelectedItem.Title, ElementName=TasksListBox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Supprimer" Width="90" Margin="8,0,0,0" Click="DeleteButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
